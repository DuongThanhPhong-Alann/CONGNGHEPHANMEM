@{
    ViewData["Title"] = "Quên mật khẩu";
}

<div class="login-form-container">
    <h2 class="text-center">Quên mật khẩu</h2>
    <form asp-action="ForgotPassword" method="post" class="login-form">
        <div class="form-group">
            <label for="email">Email</label>
            <input name="email" type="email" class="form-control" id="email" required placeholder="Nhập địa chỉ email của bạn" />
        </div>
        <div class="text-center">
            <button type="submit" class="btn btn-primary">Gửi yêu cầu</button>
        </div>
    </form>
</div>

<!-- Styles for better appearance -->
<style>
    /* Container styling */
    .login-form-container {
        max-width: 100%;
        width: 400px; /* Set a max width for the form */
        margin: 50px auto;
        padding: 30px;
        background-color: #f8f9fa;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    h2 {
        color: #007bff; /* Màu xanh nhẹ cho tiêu đề */
        margin-bottom: 30px;
    }

    .form-group {
        margin-bottom: 20px;
    }

        .form-group label {
            font-weight: bold;
            margin-bottom: 8px;
            display: block;
        }

    .form-control {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
        font-size: 16px;
        box-sizing: border-box;
    }

        .form-control:focus {
            border-color: #007bff; /* Màu xanh nhẹ cho viền khi focus */
            box-shadow: 0 0 8px rgba(0, 123, 255, 0.5);
        }

    .btn {
        padding: 10px 20px;
        font-size: 16px;
        background-color: #007bff; /* Màu xanh nhẹ cho nút */
        color: #fff;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

        .btn:hover {
            background-color: #0056b3; /* Màu xanh đậm khi hover */
        }

    .text-center {
        text-align: center;
    }
</style>
