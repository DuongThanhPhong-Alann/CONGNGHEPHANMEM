@model QLCCCC.Models.ChungCu
<style>
    .edit-apartment-container {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
        background-color: #f9f9f9;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }
</style>
<div class="edit-apartment-container">
    <h2>Thêm Chung Cư Mới</h2>

    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label for="Ten">Tên Chung Cư</label>
            <input type="text" class="form-control" asp-for="Ten" required />
        </div>

        <div class="form-group">
            <label for="DiaChi">Địa Chỉ</label>
            <input type="text" class="form-control" asp-for="DiaChi" required />
        </div>

        <div class="form-group">
            <label for="ChuDauTu">Chủ Đầu Tư</label>
            <input type="text" class="form-control" asp-for="ChuDauTu" required />
        </div>

        <div class="form-group">
            <label for="NamXayDung">Năm Xây Dựng</label>
            <input type="number" class="form-control" asp-for="NamXayDung" min="1900" max="2100" />
        </div>

        <div class="form-group">
            <label for="SoTang">Số Tầng</label>
            <input type="number" class="form-control" asp-for="SoTang" min="1" required />
        </div>

        <div class="form-group">
            <label for="MoTa">Mô Tả</label>
            <textarea class="form-control" asp-for="MoTa"></textarea>
        </div>

        <div class="form-group">
            <label for="HinhAnh">Hình Ảnh</label>
            <input type="file" class="form-control" name="HinhAnh" accept="image/*" />
        </div>

        <button type="submit" class="btn btn-primary">Lưu</button>
        <a asp-action="Index" class="btn btn-secondary">Hủy</a>
    </form>
</div>