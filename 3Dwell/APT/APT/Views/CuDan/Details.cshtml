@model QLCCCC.Models.CuDan
<style>
    .edit-apartment-container {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
        background-color: #f9f9f9;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }
</style>
<div class="edit-apartment-container">
    <h2>Chi Tiết Cư Dân</h2>

    <table class="table">
        <tr>
            <th>ID:</th>
            <td>@Model.ID</td>
        </tr>
        <tr>
            <th>Người Dùng:</th>
            <td>@Model.NguoiDung?.HoTen</td>
        </tr>
        <tr>
            <th>Chung Cư:</th>
            <td>@Model.ChungCu?.Ten</td>
        </tr>
        <tr>
            <th>Căn Hộ:</th>
            <td>@Model.CanHo?.MaCan</td>
        </tr>
    </table>

    <a asp-action="Edit" asp-route-id="@Model.ID" class="btn btn-warning">Chỉnh sửa</a>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</div>