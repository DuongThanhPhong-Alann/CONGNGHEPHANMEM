@model QLCCCC.Models.CuDan
<style>
    .edit-apartment-container {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
        background-color: #f9f9f9;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }
</style>
<div class="edit-apartment-container">
    <h2>Xóa Cư Dân</h2>

    <p>Bạn có chắc chắn muốn xóa cư dân này không?</p>

    <table class="table">
        <tr>
            <th>ID:</th>
            <td>@Model.ID</td>
        </tr>
        <tr>
            <th>Người Dùng:</th>
            <td>@Model.NguoiDung?.HoTen</td>
        </tr>
        <tr>
            <th>Chung Cư:</th>
            <td>@Model.ChungCu?.Ten</td>
        </tr>
        <tr>
            <th>Căn Hộ:</th>
            <td>@Model.CanHo?.MaCan</td>
        </tr>
    </table>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="ID" />
        <button type="submit" class="btn btn-danger">Xóa</button>
    </form>
</div>