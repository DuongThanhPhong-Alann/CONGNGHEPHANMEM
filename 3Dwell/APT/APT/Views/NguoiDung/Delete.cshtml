@model QLCCCC.Models.NguoiDung
<style>
    .edit-apartment-container {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
        background-color: #f9f9f9;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }
</style>
<div class="edit-apartment-container">
<h2>Delete User</h2>

<h3>Are you sure you want to delete this user?</h3>
<div>
    <b>Ho Ten:</b> @Model.HoTen
    <br />
    <b>So Dien Thoai:</b> @Model.SoDienThoai
    <br />
    <b>Email:</b> @Model.Email
    <br />
    <b>Loai Nguoi Dung:</b> @Model.LoaiNguoiDung
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" name="id" value="@Model.ID" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
</form>
</div>